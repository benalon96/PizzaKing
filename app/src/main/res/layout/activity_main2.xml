<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_view2"
    android:fadeScrollbars="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout2"
        android:padding="20dp">


        <TextView

            android:id="@+id/textWelcome2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_button"
            android:fontFamily="@font/anonymous_pro"
            android:gravity="center"
            android:padding="30dp"
            android:text="@string/text_welcome2"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/textWelcome2"
            android:layout_centerHorizontal="true"
            android:layout_margin="50dp"
            android:background="@drawable/chaeck_box_view"
            android:gravity="center"
            android:hint="@string/edit_text1"
            android:inputType="number"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent">

        </EditText>



            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText1"
                android:layout_margin="30sp"
                android:background="@drawable/white_button"
                android:fontFamily="@font/anonymous_pro"
                android:padding="20dp"
                android:text="@string/bth_4"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold">

            </Button>

        <LinearLayout
            android:id="@+id/bth_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn4"
            android:layout_marginTop="29dp"
            android:orientation="vertical">

