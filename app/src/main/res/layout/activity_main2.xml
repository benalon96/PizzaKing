<!--                android:textColor="#fff"-->
<!--                android:textSize="30sp"-->
<!--                android:visibility="gone"-->
<!--                >-->

<!--            </TextView>-->
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/bth_layout"
            android:background="@drawable/btn_view"
            android:layout_margin="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="20dp"
            android:id="@+id/relative_layout3">
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="20dp"

                android:src="@drawable/pizzapizza"
                android:scaleType="centerCrop"
                android:id="@+id/image2_main1"
                android:contentDescription="@string/second_bth"
                />


            <TextView
                android:layout_below="@+id/image2_main1"
                android:id="@+id/text1_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:text="@string/select_text"
                android:fontFamily="@font/anonymous_pro"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_marginBottom="20sp"
                android:layout_marginStart="20sp"
                android:textStyle="bold"
                                        >

            </TextView>
            <TextView

                android:layout_below="@+id/text1_main"
                android:id="@+id/text2_main"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:height="30dp"
                android:text="@string/numoftoppings_text"
                android:fontFamily="@font/anonymous_pro"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginBottom="20sp"
                android:layout_marginStart="20sp"
                android:textStyle="bold"
                >

            </TextView>

        <TextView

            android:layout_alignBaseline="@id/text2_main"
            android:layout_toEndOf="@id/text2_main"
            android:id="@+id/text4_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="30dp"
            android:text="@string/zero_text"
            android:fontFamily="@font/anonymous_pro"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginBottom="20sp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            >

        </TextView>
            <TextView

                android:layout_below="@+id/text4_main"
                android:id="@+id/text5_main"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:height="30dp"
                android:text="@string/number_of_pizza"
                android:fontFamily="@font/anonymous_pro"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginBottom="30sp"
                android:layout_marginStart="20sp"
                android:textStyle="bold"
                >

            </TextView>

            <TextView

                android:layout_alignBaseline="@id/text5_main"
                android:layout_toEndOf="@id/text5_main"
                android:id="@+id/text6_main"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_below="@+id/text4_main"
                android:height="30dp"
                android:text="1"
                android:fontFamily="@font/anonymous_pro"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginBottom="20sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold">

            </TextView>
            <TextView

                android:layout_below="@+id/text5_main"
                android:id="@+id/text7_main"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:height="30dp"
                android:text="@string/totelprice_text"
                android:fontFamily="@font/anonymous_pro"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginBottom="30sp"
                android:layout_marginStart="20sp"
                android:textStyle="bold"
                >

            </TextView>

            <TextView

                android:layout_alignBaseline="@id/text7_main"
                android:layout_toEndOf="@id/text7_main"
                android:id="@+id/text8_main"
                android:layout_width="wrap_content"
                android:layout_below="@+id/text4_main"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:text="@string/totalprice"
                android:fontFamily="@font/anonymous_pro"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginBottom="20sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                >
            </TextView>

        </RelativeLayout>



            <Button
                android:id="@+id/btn5"
                style="bold"
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:layout_below="@id/relative_layout3"
                android:layout_margin="20sp"
                android:background="@drawable/btn_back"
                android:fontFamily="@font/anonymous_pro"
                android:onClick="back"
                android:text="@string/back_btn"
                android:textAllCaps="false"
                android:textColor="#fff">

            </Button>

            <Button
                android:id="@+id/btn6"
                style="bold"
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:layout_below="@id/relative_layout3"
                android:layout_margin="20sp"
                android:layout_marginStart="60dp"
                android:layout_toEndOf="@id/btn5"
                android:background="@drawable/white_button"
                android:fontFamily="@font/anonymous_pro"
                android:onClick="continue1"
                android:text="@string/continue_btn"
                android:textAllCaps="false"
                android:textColor="#fff">

            </Button>
        </RelativeLayout>



</ScrollView>